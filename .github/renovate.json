{
  "extends": [
    "config:base"
  ],
  "enabledManagers": ["npm"],
  "ignoreDeps": [
    "d3",
    "husky",
    "slate",
    "slate-plain-serializer",
    "systemjs",
    "ts-loader",
    "ora"
  ],
  "labels": ["area/frontend", "dependencies"],
  "matchPaths": ["+(package.json)", "+(packages/*/package.json)"],
  "minor": {
    "enabled": false
  },
  "patch": {
    "enabled": false
  },
  "pin": {
    "enabled": false
  },
  "prConcurrentLimit": 10,
  "reviewers": ["team:grafana/frontend-ops"],
  "separateMajorMinor": false,
  "vulnerabilityAlerts": {
    "addLabels": ["area/security"]
  }
}
